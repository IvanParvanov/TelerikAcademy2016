<div class="col-md-4 col-md-offset-4">
    <form action="" id="register-form">
        <h1>Register</h1>
        <div class="form-group">
            <label for="tb-username">Username: </label>
            <input id="tb-username" class="form-control" placeholder="Username" required  pattern=".{6,30}" title="6 to 30 characters">
        </div>
        <div class="form-group">
            <label for="tb-password">Password: </label>
            <input id="tb-password" type="password" class="form-control" placeholder="Password" required pattern=".{6,30}" title="6 to 30 characters">
        </div>
        <input type="submit" class="btn btn-danger" id="btn-register"/>
    </form>
</div>