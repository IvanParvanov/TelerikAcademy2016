extends layout

block content
    .col-lg-4
        h1 Register here:
            form(action="/register" method="post")
                input.form-control(type="text" name="user[username]" placeholder="Enter Username")
                input.form-control(type="password" name="user[password]" placeholder="Enter Password")

                input.btn.btn-success(type="submit" value="Register")
